{{!< default }}
{{#post}}


{{! Post navbar }}
<nav class="navbar shaded fixed autohide">
  <div class="navbar--row container">
    <!-- Icon -->
    <div class="navbar--icon">
      <a class="ripple" href="{{@blog.url}}">
        <i class="mdi mdi-arrow-left"></i>
      </a>
    </div>
    <!-- Title -->
    <span class="navbar--title">{{title}}</span>
  </div>
</nav>


{{! Post header }}
<header class="header shaded bg-darken">
  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar--row container">
      <div class="navbar--icon">
        <a class="ripple" href="{{@blog.url}}">
          <i class="mdi mdi-arrow-left"></i>
        </a>
      </div>
    </div>
  </nav>
  <!-- Content -->
  <div class="header--content onBottom container">
    <!-- Titles -->
    <h1 class="header--title">{{title}}</h1>
  </div>
  <!-- Background -->
  {{#if image}}
    <img class="bg-image" src="{{image}}" />
  {{else}}{{#if @blog.cover}}
    <img class="bg-image" src="{{@blog.cover}}" />
  {{/if}}{{/if}}
</header>
{{! Post Main }}
<main class="main" role="main">
  <article class="main--content container" role="article">

    {{! Content }}
    <div class="post--content">{{content}}</div>
    <div class="divider"></div>

    {{! Tags }}
    <div class="post--tags half">
      {{#foreach tags}}
        <a class="ripple" href="{{url}}" title="{{name}}">{{name}}</a>
      {{/foreach}}
    </div>
  </article>
</main>
<div>
  <div id="disqus_thread" class="container"></div>
</div>
<script type="text/javascript">
  var disqus_shortname = 'imzhezhe';
  var disqus_identifier = '{{post.id}}';
  (function() {
    var dsq = document.createElement('script'); dsq.type = 'text/javascript';
  dsq.async = true;
  dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
    (document.getElementsByTagName('head')[0] ||
  document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
</script>
<noscript>
  Please enable JavaScript to view the
  <a href="http://disqus.com/?ref_noscript">Comments powered by Disqus.</a>
</noscript>
<a href="http://disqus.com" class="dsq-brlink">Comments powered by
  <span class="logo-disqus">Disqus</span>
</a>

{{/post}}
