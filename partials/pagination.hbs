<nav class="pagination">

  {{#if prev}}
    <a class="fab ripple" href="{{page_url prev}}">
      <i class="mdi mdi-arrow-left"></i>
    </a>
  {{else}}
    <a class="fab disabled" href="#!">
      <i class="mdi mdi-arrow-left"></i>
    </a>
  {{/if}}

  <span class="current">第{{page}}页 &nbsp; (共{{pages}}页)</span>

  {{#if next}}
    <a class="fab ripple" href="{{page_url next}}">
      <i class="mdi mdi-arrow-right"></i>
    </a>
  {{else}}
    <a class="fab disabled" href="#!">
      <i class="mdi mdi-arrow-right"></i>
    </a>
  {{/if}}

</nav>
